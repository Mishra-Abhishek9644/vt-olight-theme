<style>
    .shopify-section--footer-copyright {
        background-color: {{ section.settings.background }};
    }
    #footer-copyright-{{ section.id }} {
        {%- if section.settings.padding_desktop != blank -%}
          padding: {{ section.settings.padding_desktop }};
        {%- endif -%}

        border-width: {{ section.settings.border_width }};
        border-style: solid;
        border-color: {{ section.settings.border_color }};
    }
    .logo-footer {
      margin: -84px 0 0;
    }
    .footer-copyright a {
      color: var(--g-main)!important;
    }
    @media(max-width: 991px){
        .logo-footer {
          margin: 0;
        }
    }
    @media(max-width: 767px){
        #footer-copyright-{{ section.id }} {
          {% if section.settings.padding_mobile != blank %}
            padding: {{ section.settings.padding_mobile }};
          {% endif %}
        }
        .logo-footer {
          margin: 0;
        }
        .footer-copyright_text.text-left {
          text-align: center !important;
          margin: 0 0 15px;
        }
        .footer-copyright_text.text-left ,
        .footer-copyright_payment.text-right {
          text-align: center !important;
        }
        .footer-copyright .row {
          gap: 15px  0;
        }
    }
</style>

<div class="{{ section.settings.setwidth }}">
    <div id="footer-copyright-{{ section.id }}" class="footer-copyright">
        <div class="row">
            {%- for block in section.blocks -%}
                {%- liquid
                  case block.settings.width 
                    when '16%' 
                    assign block_width = 'col-lg-2 col-md-4' 
                    when '20%' 
                    assign block_width = 'col-1-5 col-md-6 col-12' 
                    when '25%' 
                    assign block_width = 'col-lg-3 col-md-12' 
                    when '28%' 
                    assign block_width = 'col-lg-3 col-md-6' 
                    when '33%' 
                    assign block_width = 'col-lg-4 col-md-4' 
                    when '50%' 
                    assign block_width = 'col-lg-6' 
                    when '66%' 
                    assign block_width = 'col-lg-8 col-md-12' 
                    when '75%' 
                    assign block_width = 'col-lg-9 col-md-12' 
                    when '100%' 
                    assign block_width = 'col-12' 
                  endcase 
                -%}
                <div class="{{ block_width }}">
                    {%- case block.type -%}
                        {%- when 'text' -%}
                            <style>
                              .footer-copyright_text p {
                                color: {{ block.settings.color_text }};
                              }
                            </style>
                            <div class="footer-copyright_text text-{{ block.settings.text_align }}">
                                <div class="my-lg-0">{{ block.settings.customcopyright }}</div>
                            </div>

                        {%- when 'logo' -%}
                            <div class="footer-copyright_logo text-{{ block.settings.text_align }}">
                                {%- if block.settings.bottom_logo != blank -%}
                                    <div class="logo-footer footer__item-title">
                                        <a href="{{ routes.root_url }}" class="header__logo-link">
                                            <img style="width: {{ block.settings.bottom_logo_width }}px" loading="lazy" sizes="{{ block.settings.bottom_logo_width }}px" class="footer__image" alt="" 
                                              src="{{ block.settings.bottom_logo | image_url: width: block.settings.bottom_logo.width }}" 
                                              srcset="{{ block.settings.bottom_logo | image_url: width: 100 }} 100w, {{ block.settings.bottom_logo | image_url: width: 200 }} 200w, {{ block.settings.bottom_logo | image_url: width: 300 }} 300w, {{ block.settings.bottom_logo | image_url: width: 400 }} 400w, {{ block.settings.bottom_logo | image_url: width: 500 }} 500w" 
                                              width="{{ block.settings.bottom_logo.width }}" height="{{ block.settings.bottom_logo.height }}">
                                        </a>
                                    </div>
                                {% endif %}
                            </div>

                        {%- when 'payment' -%}
                            <div class="footer-copyright_payment text-{{ block.settings.text_align }}">
                                {%- if block.settings.imgpayment != blank -%}
                                    <img class="lazyload" src="{{ block.settings.imgpayment | image_url: width: 1, height: 1 }}" data-src="{{ block.settings.imgpayment | image_url: width: 400 }}" 
                                      loading="lazy"
                                      width="{{ block.settings.imgpayment.width }}"
                                      height="{{ block.settings.imgpayment.height }}"/>
                                {%- endif -%}
                            </div>

                    {%- endcase -%}
                </div>
            {%- endfor -%}
        </div>
    </div>
</div>

