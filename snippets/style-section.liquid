{%- style -%}
    .customstyle{{ section.id }}{
      background:{{ section.settings.bgsection }};
      padding: {{ section.settings.paddingsection }};
      margin: {{ section.settings.marginsection }}
    }
    .customstyle{{ section.id }}{
      {%- if section.settings.background_image != blank -%}
        background-image: url({{ section.settings.background_image | image_url: width: 2000 }});
        background-size: cover;
        background-position: center;
      {%- endif -%}
    }
    @media (max-width:1199px){
      .customstyle{{ section.id }}{
        padding: {{ section.settings.paddingtablet }};
        margin: {{ section.settings.margintablet }}
      }
    }
    @media (max-width:750px){
      .customstyle{{ section.id }}{
        padding: {{ section.settings.paddingmobile }};
        margin: {{ section.settings.marginmobile }}
      }
    }
{%- endstyle -%}