<style>
  .quote__style_1 .author-avatar {
    width: 54px;
    height: 54px;
    margin-top: 0;
  }
</style>
<div class="d-flex {% if aligntext == 'text-center' %} justify-content-center {% endif %} quote__slide quote__style_1 {{ aligntext }} ">
    <div class="quote-wrap"  style="background-color:{{ bg_item }}">
      {%- if rate > 0 -%}
        <ul class="rating mb-12">
          {%- for i in (1..5) -%}
            {%- assign iMax = rate -%}
            {%- if i <= iMax -%}
            <li class="rated">
              <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path></svg>
                {%- else -%}
            <li>
              <svg aria-hidden="true" focusable="false" width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path></svg>
              {%- endif -%}
          {%- endfor -%}
        </ul>
      {%- endif -%}
      {%- if title != blank -%}
      <h6 class="mb-3">
        {{ title }}
      </h6>
      {%- endif -%}
      <div class=""><div class="{{ size_text }} mb-4">{{ quote }}</div></div>
      <div class="d-flex align-items-start {% if aligntext == 'text-center' %} justify-content-center {% endif %}">
        {%- if avatar != blank -%}
            <div class="author-avatar mr-3">
              <img class="lazyload" src="{{ avatar | image_url: width: 1 , height: 1 }}" data-src="{{ avatar | image_url: width: 300 }}" 
                loading="lazy" alt=""
                width="{{ avatar.width }}"
                height="{{ avatar.height }}"/>
            </div>
        {%- endif -%}     
          <div class="text-left">
            <div class="h6">{{ author }}{%- if info != blank -%}
            <span style="color: var(--color-body-text);font-size: 14px;line-height: 22px;font-weight: 400;" class="capitalize d-block mt-1">  {{ info }}</span>{%- endif -%}
          </div>
        </div>
      </div>
    </div>
</div>     