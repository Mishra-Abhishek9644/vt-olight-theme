<!-- blog-grid-1.liquid -->
<style>
  .blog__item--1 h5 a:hover ,
  .blog__title-link:hover {
    color: var(--g-main);
  }
  .blog__item--1 .blog_tag:after {
    content: "";
    display: inline-block;
    vertical-align: 4px ;
    background-color: var(--color-accent-3);
    margin: 0 5px 0 1px ;
    width: 6px;
    height: 1px;
  }
  .blog__item--1 .article__photo-wrapper img {
    border-radius: 18px;
  }
</style>
<div class="blog__item blog__item--1 {% if template contains 'index' %} pb-0 {% endif %}" data-aos="{{ animation }}">
  {%- if article.image -%}
  <div class="content-block__image mb-18">
    <a href="{{ article.url }}">
      <noscript>
        {{ article | image_url: width: 1024, height: 1024 | image_tag: article.title | escape }}
      </noscript>
      <div class="article__photo-container">
        <div class="article__photo-wrapper {{ image_size }}" style="padding-top:{{ 1 | divided_by: article.image.aspect_ratio | times: 100 }}%;">
          {%- assign img_url = article.image | image_url: width: 1 | replace: 'width=1', 'width={width}' -%}
          <img class="lazyload scale-in"
               src="{{ article | image_url: width: 1, height: 1 }}"
               data-src="{{ img_url }}"
               data-widths="[360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]"
               data-aspectratio="{{ article.image.aspect_ratio }}"
               data-sizes="auto"        
               alt="{{ article.title | escape }}"
               loading="lazy"
               width="{{ article.image.width }}"
              height="{{ article.image.height }}" >
        </div>
      </div>
    </a>
  </div>
  {%- endif -%}
  <div class="blog__content text-center">      
    <div class="d-flex flex-wrap align-items-center justify-content-center text-uppercase mb-2">
      <div class="d-flex flex-wrap align-items-center blog__content-tag-with-date ptb-5 px-9">
        {%- if enable_tag -%}
          {%- if article.tags.size > 0 -%}
            <div class="blog_tag">
              {%- for tag in article.tags -%}
              <a href="{{ blog.url }}/tagged/{{ tag | handle }}" style="color: var(--color-accent-3);">{{ tag }}</a>{% unless forloop.last %}, {% endunless %}
              {%- endfor -%}
            </div>
          {%- endif -%}
        {%- endif -%}
        {%- if enable_date -%}
        <p style="color: var(--color-accent-3);" class="blog__meta text-uppercase">
          <time datetime="{{ article.published_at }}">
            <span class="meta-b">{{ article.published_at | date: "%b" }}</span>
            <span class="meta-d">{{ article.published_at | date: "%d" }}</span>,
            <span class="meta-y">{{ article.published_at | date: "%Y" }}</span>
          </time>
        </p>
        {%- endif -%}
      </div>
      {%- if enable_comment -%}
      <div style="color: var(--color-accent-3)" class="blog_comment align-items-center d-flex ml-2">
        <svg fill="none" focusable="false" width="18" height="17" class="icon-comment mr-2 d-none" viewBox="0 0 18 17">
          <path d="M5 5.5H13" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
          <path d="M6 8.5H12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
          <path d="M13 13V16L9 13H4C3 13 1 12 1 10V4C1 2 3 1 5 1H13C15 1 17 2 17 4V10C17 12 14.3333 12.8333 13 13Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
        {{ 'blogs.comments.with_count' | t: count: article.comments_count }}
      </div>
      {%- endif -%}
    </div>
  <h5 class="blog__title-link text-capitalize {% if settings.enable_short %} mb-20 {% else %} mb-20 {% endif %}"><a href="{{ article.url }}">{{ article.title | truncatewords: 4 }}</a></h5>
  {%- if enable_short -%}
  <div hidden style="width:70px;"><hr ></div>
  <div class="rte rte--indented-images mb-4">
    {%- if article.excerpt.size > 0 -%}
    {{ article.excerpt }}
    {%- else -%}
      {%- if template contains 'index' -%}
      <p class="">{{ article.content | strip_html | truncatewords: 20 }}</p>
      {%- else -%}
      <p class="">{{ article.content | strip_html | truncatewords: 15 }}</p>
      {%- endif -%}
    {%- endif -%}
  </div>
  {%- endif -%}
  {%- if enable_btn_blog -%}
  <a  class="btn {% if enable_btn_line %} btn-underline {% else %} btn-theme btn-sm {% endif %} gradient-theme {% if template contains 'index' %} mb-0 {% else %}mb-3{% endif %}" href="{{ article.url }}" title="{{ article.title }}">
    {{ 'blogs.article.read_more' | t }}
  </a>  
  {%- endif -%}
</div>
</div>